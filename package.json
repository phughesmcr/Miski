{
  "name": "miski",
  "version": "0.6.0",
  "description": "A simple ECS architecture in Typescript",
  "main": "dist/cjs/index.min.js",
  "module": "dist/esm/index.min.js",
  "browser": "dist/iife/index.min.js",
  "types": "dist/cjs/index.d.ts",
  "type": "module",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    "require": "./dist/umd/index.min.js",
    "import": "./dist/esm/index.min.js",
    "node": "./dist/cjs/index.min.js",
    "browser": "./dist/iife/index.min.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.4",
    "@types/chai": "^4.2.21",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.7",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.4",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "gh-pages": "^3.2.3",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run lint:fix",
    "dev": "npm run clean && npm run build:types && rollup -c ./rollup.config.dev.js && npm run clean:post",
    "build": "npm run build:types && rollup -c ./rollup.config.js",
    "postbuild": "npm run build:docs && npm run clean:post",
    "build:docs": "npx typedoc src/index.ts --out docs",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "npm run clean:pre && npm run clean:post && npm run clean:docs",
    "clean:docs": "rimraf docs",
    "clean:pre": "rimraf build && rimraf dist && rimraf types",
    "clean:post": "rimraf types",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "mocha",
    "check:types": "tsc --noEmit",
    "check:es5": "npx es-check es5 ./dist/iife/*.js --verbose",
    "check:es3": "npx es-check es3 ./dist/iife/*.js --verbose",
    "gh-pages": "gh-pages --dist=./demo --dotfiles=true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phughesmcr/Miski"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system"
  ],
  "author": {
    "name": "Peter Hughes",
    "email": "peter@phugh.es",
    "url": "https://www.phugh.es"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phughesmcr/Miski/issues"
  },
  "homepage": "https://github.com/phughesmcr/Miski",
  "dependencies": {
    "core-js": "^3.16.0"
  }
}
