{
  "name": "miski",
  "description": "An ECS architecture in Typescript",
  "version": "0.11.1",
  "main": "dist/miski.min.js",
  "module": "dist/miski.min.js",
  "types": "dist/miski.min.d.ts",
  "type": "module",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    ".": {
      "import": "./dist/miski.min.js",
      "types": "./dist/miski.min.d.ts"
    }
  },
  "sideEffects": false,
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/chai": "^4.3.4",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.9",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-problems": "^7.0.1",
    "eslint-plugin-no-explicit-type-exports": "^0.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "esm": "^3.2.25",
    "gh-pages": "^5.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.7",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^4.4.1",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.28",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "prebuild": "npm run clean:pre && npm run lint:fix",
    "build": "rollup -c ./rollup.config.js",
    "postbuild": "npm run build:docs && npm run clean:post",
    "build:docs": "npx typedoc src/index.ts --out docs --excludePrivate",
    "clean:docs": "rimraf docs",
    "clean:pre": "rimraf build && rimraf dist && npm run clean:docs",
    "clean:post": "rimraf build",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "mocha",
    "check:types": "tsc --noEmit",
    "gh-pages": "gh-pages --dist=./ --branch=master --dotfiles=true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phughesmcr/Miski.git"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system",
    "simulation",
    "sim",
    "gamedev",
    "game engine"
  ],
  "author": "Peter Hughes <peter@phugh.es> (https://www.phugh.es)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phughesmcr/Miski/issues"
  },
  "homepage": "https://github.com/phughesmcr/Miski"
}
